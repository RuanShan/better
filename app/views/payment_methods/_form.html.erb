<%= simple_form_for(@payment_method) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :merchant %>
    <%= f.input :pid %>
    <%= f.input :key %>
    <%= f.input :state %>
    <%= f.input :enabled %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
