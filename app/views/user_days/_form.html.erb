<%= simple_form_for(@user_day) do |f| %>
  <%#= f.error_notification %>

  <div class="form-inputs">
    <%= f.association :user %>
    <%= f.input :effective_on %>
    <%= f.input :deposit_amount %>
    <%= f.input :drawing_amount %>
    <%= f.input :bid_amount %>
    <%= f.input :bonus %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
