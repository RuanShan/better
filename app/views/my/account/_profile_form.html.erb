<div class="zxzhifu">
  <%= better_form_for(current_user, :url=>{:action=>"change_profile"}) do |f| %>
    <%#= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :first_name, label: '名', as:"string", placeholder: "请输入名" %>
      <%= f.input :last_name, label: '姓', as:"string", placeholder: "请输入姓" %>
      <%= f.input :role, label: '性别' do %>
        <%= f.collection_radio_buttons :gender,[['male', '男'] ,['female', '女'],['secret', '保密']], :first, :last%>
      <% end %>
      <%= f.input :phone, label: '联系电话', as:"string", placeholder: "请输入联系电话" %>
      <%= f.input :qq, label: 'QQ号', as:"string", placeholder: "请输入QQ号" %>
    </div>
    <div class="form-actions">
      <%= f.button :submit, "更新资料", class:"ggtj1" %>
    </div>
  <% end %>
</div>
