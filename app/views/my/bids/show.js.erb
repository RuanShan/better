          var url ='/my/bids/simulate_update';
        <%end%>
        $.ajax({url: url,
          type:'PUT',
          data:{
            quote: last_quote
          }
        })
      }
  });
  bid.start()

  $("#simplemodal").html(<%== ( render :partial => "show",:formats=>[:html] ).to_json %>)

  $('#simplemodal').simplemodal(
