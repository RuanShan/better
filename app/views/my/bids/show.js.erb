      },
      onCounterEnd: function() {
        //var game = Game.current( $(".forex-wrapper") );
        var last_quote = $(".b-instrument-last-quote").first().html();
        var bid_id = <%=@bid.id ? @bid.id : 0%>
        <% if @bid.persisted? %>
          var url ='/my/bids/<%=@bid.id%>';
