<% content_for :page_title do %>
  <%= link_to "会员管理", admin_users_url %> /
   会员充值
<% end %>
<div>
  <%= better_form_for(@deposit, url: {:action=>"create"} ) do |f| %>
    <div class="form-inputs">
      <%= f.input :amount %>
      <%= f.input :memo %>
      <%= f.input :user_id, as: "hidden" %>
    </div>
    <div class="form-actions">
      <%= f.button :submit, "充值" %>
    </div>
  <% end %>
</div>
