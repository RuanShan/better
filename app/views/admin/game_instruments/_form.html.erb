<% url = @game_instrument.new_record? ? admin_game_instruments_path : admin_game_instrument_path( @game_instrument ) %>

<%= simple_form_for( @game_instrument, url:  url ) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :code %>
    <%= f.input :description %>
    <%= f.input :hot %>
    <%= f.input :default_rate %>
    <%= f.input :category_id %>
   </div>

  <div class="form-actions">
    <%= f.button :submit, class: 'btn btn-primary' %>
  </div>
<% end %>
