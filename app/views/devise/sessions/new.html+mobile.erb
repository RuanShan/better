
<div class="sign_up_wrapper">
	<div class="container kai12">
    <%user = User.new%>
    <%= simple_form_for(user, :url => user_session_path, :html => {:remote=>true, :id=>'sign_up_form', :role => 'form'}) do |f| %>
      <%=f.input "email", label: false, placeholder: "邮箱"  %>
      <%=f.input "password", label: false, placeholder: "密码" %>
      <%=f.input "lang", label: false, as: "hidden" %>
      <div class="login-msg"></div>
      <%= link_to "忘记密码?", new_password_path(user) %>
      <%= f.submit '登录', class: 'chuangjiankaihu' %>
    <% end %>
  </div>
</div>
